{
  "name": "ollama-translator",
  "version": "0.1.0",
  "description": "Electron desktop wrapper for the Ollama Translator web app",
  "main": "main.js",
  "productName": "Ollama Translator",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "me.hitian.ollama.translator",
    "files": [
      "**/*"
    ],
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": ["nsis"]
    }
  }
}

